@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-striped table-border" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name                </td>
                <td>@category.DisplayOrder                </td>
            </tr>
        }
        
    </tbody>
    
</table>

