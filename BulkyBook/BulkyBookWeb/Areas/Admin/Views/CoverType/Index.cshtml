@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="container pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">CoverType List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create new Cover
            </a>
        </div>
    </div>



    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var coverType in Model)
            {
                <tr>
                    <td>@coverType.Name</td>
                    <td> </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@coverType.Id">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                        </div>
                    </td>
                    <td>
                        <div>
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@coverType.Id">
                                <i class="bi bi-pencil-square btn-primary"></i>Delete
                            </a>
                        </div>
                    </td>
                    
                </tr>
            }

        </tbody>

    </table>

</div>
